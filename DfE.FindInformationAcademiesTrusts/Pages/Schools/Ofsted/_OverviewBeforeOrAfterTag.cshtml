@using DfE.FindInformationAcademiesTrusts.Data.Enums
@model BeforeOrAfterJoining?

@switch (Model)
{
    case BeforeOrAfterJoining.After:
    {
        <strong class="govuk-tag govuk-!-margin-top-2 govuk-!-margin-bottom-2">
            After joining
        </strong>
        break;
    }
    case BeforeOrAfterJoining.Before:
    {
        <strong class="govuk-tag govuk-tag--orange govuk-!-margin-top-2 govuk-!-margin-bottom-2">
            Before joining
        </strong>
        break;
    }
}
