@using DfE.FindInformationAcademiesTrusts.Extensions
@model OlderBaseRatingsModel

@if (Model.OfstedRating != null)
{

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-m" data-testid="subpage-header">
                @Model.PageMetadata.TabName
            </h1>

            @await Html.PartialAsync("Schools/Ofsted/_InspectionDate", Model.OfstedRating.InspectionDate)
            
            @if (Model.GetType() == typeof(PreviousRatingsModel))
            {
                @await Html.PartialAsync("Schools/Ofsted/_SingleHeadlineGrade", Model.SingleHeadlineRating)
            }
            
            @await Html.PartialAsync("Schools/Ofsted/_InspectionBeforeOrAfter", Model.InspectionBeforeOrAfterJoiningTrust)

            <dl class="govuk-summary-list govuk-!-margin-bottom-0" data-testid="ratings-table">
                <div class="govuk-summary-list__row" data-testid="quality-of-education-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Quality of education
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.QualityOfEducation.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="behaviour-and-attitudes-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Behaviour and attitudes
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.BehaviourAndAttitudes.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="personal-development-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Personal development
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.PersonalDevelopment.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="leadership-and-management-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Leadership and management
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.EffectivenessOfLeadershipAndManagement.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="early-years-provision-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Early years provision
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.EarlyYearsProvision.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="sixth-form-provision-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half">
                        Sixth form provision
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.OfstedRating.SixthFormProvision.ToDisplayString(false)
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="effective-safeguarding-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half" data-testid="effective-safeguarding-label">
                        Effective safeguarding
                    </dt>
                    <dd class="govuk-summary-list__value" data-testid="effective-safeguarding-value">
                        @Model.OfstedRating.SafeguardingIsEffective.ToDisplayString()
                    </dd>
                </div>

                <div class="govuk-summary-list__row" data-testid="category-of-concern-row">
                    <dt class="govuk-summary-list__key govuk-!-width-one-half" data-testid="category-of-concern-label">
                        Category of concern
                    </dt>
                    <dd class="govuk-summary-list__value" data-testid="category-of-concern-value">
                        @Model.OfstedRating.CategoryOfConcern.ToDisplayString()
                    </dd>
                </div>

            </dl>
        </div>
    </div>
}