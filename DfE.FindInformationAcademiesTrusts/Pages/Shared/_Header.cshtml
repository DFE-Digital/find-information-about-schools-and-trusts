@model BasePageModel
<header class="gem-c-layout-super-navigation-header">
    <div class="gem-c-layout-super-navigation-header__container govuk-clearfix">
        <div class="govuk-width-container transparent-bottom-border header-top">
            <!-- Logo -->
            <div class="gem-c-layout-super-navigation-header__header-logo">
                <a class="govuk-header__link govuk-header__link--homepage" id="logo" href="/">
                    <img src="~/dist/images/department-for-education_white.png" alt="Department for Education" class="govuk-header__logotype">
                </a>
            </div>
            <div class="header-right">  

                @if (Model.ShowHeaderSearch)
                {
                    <partial name="_HeaderSearchForm" />
                }

                <!-- action links  -->
                <partial name="_HeaderActionLinks" model="Model"/>
            </div>
        </div>
    </div>
</header>

@if (Model.ShowHeaderSearch)
{
    <partial name="_HeaderSearchPanel" model="Model"/>
}